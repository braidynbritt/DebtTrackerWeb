<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GoalPay</title>
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/GoalPay.styles.css" asp-append-version="true" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: var(--bg);
            color: var(--text);
        }

        main {
            flex: 1 0 auto;
            padding-bottom: 24px;
        }

        footer.footer {
            flex-shrink: 0;
            margin-top: auto;
            border-top: 1px solid var(--border);
            background-color: var(--form-bg);
            color: var(--text);
            text-align: center;
            padding: 8px 0;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100" style="background-color: var(--bg); color: var(--text);">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">GoalPay</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                    </ul>
                    <div style="margin-left: auto;">
                        <div class="toggle-container" id="theme-toggle" onclick="toggleTheme()">
                            <span class="toggle-slider"></span>
                            <span class="toggle-icon sun">☀️</span>
                            <span class="toggle-icon moon">🌙</span>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-fill container py-3">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-2 border-top text-center" style="background-color: var(--form-bg); color: var(--text);">
        <div class="container">
            &copy; 2025 - GoalPay
        </div>
    </footer>
    </body>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/theme-toggle.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</html>
